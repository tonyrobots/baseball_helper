<p id="notice"><%= notice %></p>

<h1>Pitchers</h1>

<%= form_tag(pitchers_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :salary, params[:salary], placeholder: "Salary" %>
    <%= submit_tag "Search by Salary", :name => nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pitchers.each do |pitcher| %>
      <tr>
        <td><%= link_to pitcher.fname + " " + pitcher.lname, pitcher %> (<%=pitcher.season %> <%= pitcher.franchise %>) - <%= pitcher.ip_162 %> IPs</td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
