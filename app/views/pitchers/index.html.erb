<p id="notice"><%= notice %></p>

<h1>Pitchers</h1>

<%= form_tag(pitchers_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :salary, params[:salary], placeholder: "Salary" %>
    <%= submit_tag "Search by Salary", :name => nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pitchers.each do |pitcher| %>
      <tr>
        <td><%= pitcher.fname %> <%= pitcher.lname %> (<%=pitcher.season %>)</td>

        <td><%= link_to 'Show', pitcher %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pitcher', new_pitcher_path %>
